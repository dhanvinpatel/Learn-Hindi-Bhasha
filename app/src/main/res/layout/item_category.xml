<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="10dp">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="@dimen/category_tile_size"
        android:layout_height="@dimen/category_tile_size"
        android:backgroundTint="@color/white"
        app:cardCornerRadius="@dimen/category_corner_radius">

        <ImageView
            android:id="@+id/categoryImageView"
            android:layout_width="@dimen/category_image_size"
            android:layout_height="@dimen/category_image_size"
            android:layout_gravity="center"
            android:contentDescription="@string/category_image_description"
            android:src="@drawable/ic_numbers" />

    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/categoryTextView"
        style="@style/home_screen_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/category_image_text_margin"
        android:gravity="center"
        tools:text="Accommodation"
        tools:textColor="@color/black" />

</LinearLayout>